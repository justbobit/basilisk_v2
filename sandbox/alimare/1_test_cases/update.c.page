/**
We produce an animation of the tracer field. */

event movies (t += 0.05; t <= 5.0)
{

  scalar omega[], m[],m2[],m3[];
  vorticity (u, omega);
  foreach(){
    m[] = 0., m2[] = 0. , m3[] =0.;
    foreach_dimension()
      m[] += cs[]*sq(u.x[]) + (1-cs[])*sq(u2.x[]);
      m2[] += cs[]*sq(u.x[]) ;
      m3[] += (1-cs[])*sq(u2.x[]);
    m[] = sqrt(m[]);
  }
  boundary ({m});
  output_ppm (m, file = "vort.gif", box = {{-2,-2.},{2.,2.}},
        linear = true);
  output_ppm (m2, file = "vort2.gif", box = {{-2,-2.},{2.,2.}},
        linear = true);
  output_ppm (m3, file = "vort3.gif", box = {{-2,-2.},{2.,2.}},
        linear = true);
  // output_ppm (f, file = "f.gif", box = {{-2.,-2.},{2.,2.}}, 
  //       n = 800,linear = false, min = 0, max = 1, mask = m);
}

/**
We adapt according to the error on the embedded geometry, velocity and
tracer fields. */

event adapt (i++) {
  adapt_wavelet ({cs,u,u2,f}, (double[]){1e-2,3e-2,3e-2,3e-2}, 9, 4);
}

